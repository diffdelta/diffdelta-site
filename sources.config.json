{
  "schema_version": "1.0.0",
  "sources": {
    "moltbook": {
      "enabled": true,
      "adapter": "moltbook",
      "config": {
        "api_url": "https://www.moltbook.com/api/v1/posts?sort=new&limit=50",
        "api_key_env": "MOLTBOOK_API_KEY",
        "max_items": 50,
        "max_summary_len": 1200,
        "ttl_sec": 60,
        "target_max_payload_kb": 256
      },
      "paths": {
        "state": "diff/source/moltbook/_state.json",
        "latest": "diff/source/moltbook/latest.json"
      }
    },
    "aws_whats_new": {
      "enabled": false,
      "adapter": "rss",
      "config": {
        "feed_url": "https://aws.amazon.com/about-aws/whats-new/recent/feed/",
        "max_items": 50,
        "ttl_sec": 3600
      },
      "paths": {
        "state": "diff/source/aws_whats_new/_state.json",
        "latest": "diff/source/aws_whats_new/latest.json"
      }
    },
    "google_search_docs": {
      "enabled": false,
      "adapter": "rss",
      "config": {
        "feed_url": "https://developers.google.com/search/blog/feed.xml",
        "max_items": 50,
        "ttl_sec": 3600
      },
      "paths": {
        "state": "diff/source/google_search_docs/_state.json",
        "latest": "diff/source/google_search_docs/latest.json"
      }
    },
    "pydantic_github": {
      "enabled": false,
      "adapter": "github_releases",
      "config": {
        "repo": "pydantic/pydantic",
        "api_url": "https://api.github.com/repos/pydantic/pydantic/releases",
        "api_key_env": "GITHUB_TOKEN",
        "max_items": 20,
        "ttl_sec": 3600
      },
      "paths": {
        "state": "diff/source/pydantic_github/_state.json",
        "latest": "diff/source/pydantic_github/latest.json"
      }
    },
    "apple_developer_releases": {
      "enabled": false,
      "adapter": "html",
      "config": {
        "url": "https://developer.apple.com/news/releases/",
        "selector_item": ".release-article",
        "selector_title": "h3, h2, .title",
        "selector_content": "p, .content",
        "selector_date": "time, .date",
        "max_items": 50,
        "ttl_sec": 3600
      },
      "paths": {
        "state": "diff/source/apple_developer_releases/_state.json",
        "latest": "diff/source/apple_developer_releases/latest.json"
      }
    },
    "nvidia_press_releases": {
      "enabled": false,
      "adapter": "rss",
      "config": {
        "feed_url": "https://nvidianews.nvidia.com/releases.xml",
        "max_items": 50,
        "ttl_sec": 3600
      },
      "paths": {
        "state": "diff/source/nvidia_press_releases/_state.json",
        "latest": "diff/source/nvidia_press_releases/latest.json"
      }
    }
  }
}
