{
  "schema_version": "1.0.0",
  "sources": {
    "moltbook": {
      "enabled": true,
      "adapter": "moltbook",
      "config": {
        "api_url": "https://www.moltbook.com/api/v1/posts?sort=new&limit=50",
        "api_key_env": "MOLTBOOK_API_KEY",
        "max_items": 50,
        "max_summary_len": 1200,
        "ttl_sec": 60,
        "target_max_payload_kb": 256
      },
      "paths": {
        "state": "diff/source/moltbook/_state.json",
        "latest": "diff/source/moltbook/latest.json"
      }
    }
  }
}
